import usuarios from "../repositorios/usuarios.js"
import { hash, compare } from "bcrypt";


const logar = (email, password) => { //Função responsável pelo Login do usuário

    //Verifica se existe um usuário com o mesmo nome
  let usuarioExistir = usuarios.findIndex((usuario, index) => {
    return usuario.email === email ? index : false;
  });

  if (usuarioExistir === -1) usuarioExistir = null; //Transforma o -1 em null para melhor semântica da próxima condição

  if (usuarioExistir) { //Se o usuário existir, a senha é verificada, retornando true ou false.
    usuarios[usuarioExistir].password === password ? console.log(`Usuário ${email} logado com sucesso!`) : console.log("Usuário ou senha incorretos! Tente novamente.");
    return usuarios[usuarioExistir].password === password ? true : false //Só a condição já retorna true ou false
  } 
  console.log("Usuário ou senha incorretos! Tente novamente."); //Caso o usuário não exista
  return false; // Pode ser movida a linha 12
};

const cadastrar = (email, password) => { //Função responsável por cadastrar novos usuários

    const senhaSegura = (password) => { //Função responsável por verificar as políticas de segurança de senhas
        // Verifica se a senha tem pelo menos 8 caracteres
        if (password.length < 8) return false 
        // Verifica se há pelo menos uma letra maiúscula
        if (!/[A-Z]/.test(password)) return false;
        // Verifica se há pelo menos um caractere especial
        if (!/[\W_]/.test(password)) return false;
        // Verifica se há pelo menos um número
        if (!/\d/.test(password)) return false;  
    
        return true; //Caso não entre em nenhuma condição de falha de segurança retorna true
      }
  let passwordIsSafe = senhaSegura(password) //Guarda nessa variável se a senha é segura ou não
  email = email.toLowerCase(); //Garante que todos os caracteres do e-mail sejam letras minúsculas  
  
  if (!passwordIsSafe){ //Tratamento de senha não segura
    console.log("A senha precisa conter pelo menos um caractere especial, uma letra maiuscula, 8 caracteres e um número, tente novamente.")
    return false;
  }
  
  if (!email.includes("@modalgr.com.br")){ //Tratamento de e-mail não corporativo //@modalgr.com.br@outlook.com
    console.log("O e-mail de cadastro precisa ser da ModalGR")
    return false;
  }
  
  let user = usuarios.find((user) => { //Verifica se já existe um usuário com o mesmo e-mail da tentativa de cadastro
    return user.email === email;
  });
  
  if (!user) { //Caso não exista um usuário com o mesmo nome, o usuário é cadastrado em memória
    usuarios.push({
      email,
      password,
    });
    console.log(`Usuário ${email} cadastrado com sucesso!`)
  } else
    console.log(`O nome de usuario: ${email} já está cadastrado no sistema.`); //Caso já exista um usuário com o esse e-mail, uma mensagem é exibida.
};


const criptografar = async (password) => await hash(password, Number(process.env.PASSWORD_SALT))  

cadastrar("jere@modalgr.com.br", criptografar("Balao1234_@"))

